<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.MainPage">
    <StackLayout>
        <Image
            Source="Resources/Images/account.png"
            WidthRequest="150"
            Margin="0, 20, 0, 60"/>
        <Frame
            BackgroundColor="#50F78D"
            WidthRequest="350"
            CornerRadius="24">
            <Entry
                x:Name="userNameEntry"
                Placeholder="User Name"
                PlaceholderColor="#000000"
                FontSize="20"
                HorizontalTextAlignment="Center"
                />
        </Frame>
        <Frame
            Margin="0, 15, 0, 0"
            BackgroundColor="#50F78D"
            WidthRequest="350"
            CornerRadius="24">
            <Entry
                x:Name="passwordEntry"
                Placeholder="Password"
                PlaceholderColor="#000000"
                FontSize="20"
                HorizontalTextAlignment="Center"
                IsPassword="True"/>
        </Frame>
        <Button
            BackgroundColor="Black"
            WidthRequest="50"
            Margin="0, 10, 30, 0"
            HorizontalOptions="End"
            Text="O"
            FontSize="20"
            Clicked="PasswordShow"/>


        <Button
            BackgroundColor="Red"
            Margin="0, 220, 0, 0"
            WidthRequest="300"
            HeightRequest="50"
            CornerRadius="50"
            Text="Login"
            TextColor="Black"
            FontSize="20"
            FontAttributes="Bold, Italic"
            Clicked="LoginButton"/>

        <Button
            Margin="0, 20, 0, 0"
            BackgroundColor="White"
            Text="Forgot Password"
            TextColor="Black"
            />
    </StackLayout>

</ContentPage>
